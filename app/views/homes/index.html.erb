<!DOCTYPE html>
<html>
<head>
  <title>ChristmasLights</title>
 
 </head>
 
<h1 class="homePageTitle">Homes with Christmas Lights Worth Visiting</h1>


<%= form_tag(homes_path, :method => "get") do %>
    <p> 
        <div class="searchLine">
       
        <%= select "address", "title", options_for_select(Home.all, selected: params[:address]), {prompt: 'Select Category'} %>
        <%= submit_tag 'Filter', :name => nil, :style => 'height: 30px' %>
        </div>
    </p>
    <% if @homes.blank? %>
        <h4 class="oneLineMessage">There are no posts containing the search term, <%=params[:search]%>.</h4>
    <% end %>    
<% end %>    

</html>