<h1 class="page-title">User Login Form</h1>
<%= form_tag({action: 'login'}, id: 'new-user-form') do |f| %>
    <div class="p-b_5, align-left">
      <div class="p-b_5">
        <%= label_tag(:user_name, "Username: ") %>
        <%= text_field_tag(:user_name, nil, class: 'text-input-box input-border', required: true, autofocus: true) %>
      </div>
      <div class="p-b_5">
        <%= label_tag(:password, "Password: ") %>
        <%= password_field_tag(:password, nil, class: 'input-border', required: true) %>
      </div>
    </div>
    <br />
    <div class="sd-link">
      <%= link_to 'Forgot my password', reset_password_users_path %>
    </div>
    <br />
    <div class="align-center">
      <%= button_tag('Login', id: 'button') %>
    </div>
<% end %>